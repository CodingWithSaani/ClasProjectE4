<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_parent_layout"
    android:padding="5dp"
    android:background="@color/color_custom_row">

    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:id="@+id/custom_player_iv"
        android:src="@drawable/abid_ali"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_title_player_name_tv"
        android:text="@string/player_name_title"
        android:layout_toRightOf="@id/custom_player_iv"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_player_name_tv"
        android:text="@string/player_name_title"
        android:layout_toRightOf="@id/custom_player_iv"
        android:layout_below="@id/custom_title_player_name_tv"
        android:layout_marginTop="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_title_player_batting_style_tv"
        android:text="@string/batting_style_text"
        android:layout_below="@id/custom_player_name_tv"
        android:layout_toRightOf="@id/custom_player_iv"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_player_batting_style_tv"
        android:text="@string/batting_style_text"
        android:layout_toRightOf="@id/custom_player_iv"
        android:layout_below="@id/custom_title_player_batting_style_tv"
        android:layout_marginTop="2dp"/>









</RelativeLayout>